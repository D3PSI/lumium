{
    "name": "lumium",
    "version": "1.0.0",
    "description": "next level docs",
    "scripts": {
        "test": "npm test --workspace lumium-space && npm test --workspace lumium-api && npm test --workspace lumium-dashboard",
        "build": "./scripts/build.sh",
        "start": "concurrently -n lumium-space,lumium-api,lumium-dashboard \"npm start --workspace lumium-space\" \"npm start --workspace lumium-api\" \"npm start --workspace lumium-dashboard\"",
        "dev": "concurrently -n lumium-space,lumium-api,lumium-dashboard \"npm run dev --workspace lumium-space\" \"npm run dev --workspace lumium-api\" \"npm run dev --workspace lumium-dashboard\"",
        "db:migrate": "npm run db:migrate --workspace lumium-api",
        "preinstall": "npm run lumium-renderer:package --workspace lumium-space",
        "heroku-prebuild": "npm run lumium-renderer:install --workspace lumium-space"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/D3PSI/lumium.git"
    },
    "author": "Cedric Schwyter <cedricschwyter@bluewin.ch>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/D3PSI/lumium/issues"
    },
    "homepage": "https://github.com/D3PSI/lumium#readme",
    "workspaces": [
        "lumium-space",
        "lumium-api",
        "lumium-dashboard"
    ],
    "devDependencies": {
        "@nrwl/cli": "14.1.9",
        "@nrwl/nx-cloud": "14.0.5",
        "@nrwl/workspace": "14.1.9",
        "@types/node": "17.0.40",
        "nx": "14.1.9",
        "ts-node": "10.8.1",
        "typescript": "4.7.3"
    },
    "dependencies": {
        "child_process": "1.0.2",
        "heroku-client": "3.1.0"
    }
}
